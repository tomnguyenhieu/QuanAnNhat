<UserControl x:Class="QuanAnNhat.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanAnNhat.Views"
             xmlns:viewmodels="clr-namespace:QuanAnNhat.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1300">
    <UserControl.Resources>
        <viewmodels:HomeViewModel x:Key="HomeVM"/>
    </UserControl.Resources>
    <Grid DataContext="{StaticResource HomeVM}" Margin="40 20 40 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="310"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Margin="18" CornerRadius="20">
                <Border.Background>
                    <ImageBrush ImageSource="/Assets/Images/intro1.jpg" 
                                Stretch="UniformToFill"/>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10"
                                      ShadowDepth="1"
                                      Direction="270"
                                      Color="Black"
                                      Opacity="0.4" />
                </Border.Effect>
            </Border>
            <Border Grid.Column="1" Margin="18" CornerRadius="20" Background="#BC4C33">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10"
                      ShadowDepth="1"
                      Direction="270"
                      Color="Black"
                      Opacity="0.4"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Margin="14" CornerRadius="20">
                        <Border.Background>
                            <ImageBrush ImageSource="/Assets/Images/intro2.jpg" 
                                        Stretch="UniformToFill"/>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                              ShadowDepth="1"
                                              Direction="270"
                                              Color="Black"
                                              Opacity="0.4" />
                        </Border.Effect>
                    </Border>
                    <StackPanel Grid.Column="1" Margin="12">
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#FDF6EF"
                                   Margin="0 0 0 15"
                                   FontSize="13"
                                   FontFamily="Montserrat Alternates"
                                   Text="The old photo of the restaurant is a glimpse into the past, capturing a time when it was still modest and unrefined."/>
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#FDF6EF"
                                   FontSize="13"
                                   FontFamily="Montserrat Alternates"
                                   Margin="0 0 0 15"
                                   Text="Though not perfect, every corner in the picture holds the essence of hard work and dreams."/>
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#FDF6EF"
                                   FontSize="13"
                                   FontFamily="Montserrat Alternates"
                                   Text="Now, after years of dedication and investment, the restaurant has transformed—more elegant, more refined. This photo stands as a testament to growth, a reminder of humble beginnings, and a motivation to keep striving for excellence.."/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="680"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Margin="18 0 18 0">
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="GRLabel" Height="40"/>
                    <RowDefinition/>
                    <RowDefinition Height="{Binding Height, ElementName=GRLabel}"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="TBName"
                           Text="Must Try"
                           FontSize="30"
                           Foreground="#1B1B18"
                           FontFamily="Montserrat Alternates"
                           FontWeight="Bold"/>
                <ScrollViewer Grid.Row="1"
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding BestSellerDishes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="225"
                                        Background="#BC4C33"
                                        CornerRadius="20"
                                        Margin="0 0 30 6">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10"
                                                          ShadowDepth="1"
                                                          Direction="270"
                                                          Color="Black"
                                                          Opacity="0.4"/>
                                    </Border.Effect>
                                    <StackPanel Margin="10">
                                        <Border Height="120"
                                                CornerRadius="20"
                                                Background="White">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="10"
                                                                  ShadowDepth="1"
                                                                  Direction="270"
                                                                  Color="Black"
                                                                  Opacity="0.4"/>
                                            </Border.Effect>
                                        </Border>
                                        <StackPanel Margin="12 8 12 0">
                                            <TextBlock Text="{Binding Name}"
                                                       FontFamily="Montserrat Alternates"
                                                       Foreground="#F5EFDF"
                                                       FontSize="20"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Description}"
                                                       FontFamily="Montserrat Alternates"
                                                       Foreground="#F5EFDF"
                                                       FontSize="11"/>
                                            <TextBlock Text="{Binding Price}"
                                                       FontFamily="Montserrat Alternates"
                                                       Foreground="#42150D"
                                                       FontSize="34" 
                                                       FontWeight="SemiBold" 
                                                       HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
                <TextBlock Grid.Row="2"
                           Text="Best Seller"
                           FontSize="{Binding FontSize, ElementName=TBName}"
                           Foreground="{Binding Foreground, ElementName=TBName}"
                           FontFamily="{Binding FontFamily, ElementName=TBName}"
                           FontWeight="{Binding FontWeight, ElementName=TBName}"/>
                <ScrollViewer Grid.Row="3"
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled"
                              Margin="0 0 0 6">
                    <ItemsControl ItemsSource="{Binding MustTryDishes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="225"
                                        Background="#BC4C33"
                                        CornerRadius="20"
                                        Margin="0 0 30 6">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10"
                                                          ShadowDepth="1"
                                                          Direction="270"
                                                          Color="Black"
                                                          Opacity="0.4"/>
                                    </Border.Effect>
                                    <StackPanel Margin="10">
                                        <Border Height="115"
                                                CornerRadius="20"
                                                Background="White">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="10"
                                                                  ShadowDepth="1"
                                                                  Direction="270"
                                                                  Color="Black"
                                                                  Opacity="0.4"/>
                                            </Border.Effect>
                                        </Border>
                                        <StackPanel Margin="12 8 12 0">
                                            <TextBlock Text="{Binding Name}"
                                                       FontFamily="Montserrat Alternates"
                                                       Foreground="#F5EFDF"
                                                       FontSize="20"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Description}"
                                                       FontFamily="Montserrat Alternates"
                                                       Foreground="#F5EFDF"
                                                       FontSize="11"/>
                                            <TextBlock Text="{Binding Price}"
                                                       FontFamily="Montserrat Alternates"
                                                       Foreground="#42150D"
                                                       FontSize="34" 
                                                       FontWeight="SemiBold" 
                                                       HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
            <Border Grid.Column="1" 
                    Margin="18 42 18 25"
                    CornerRadius="20"
                    Background="#B03A25">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10"
                      ShadowDepth="1"
                      Direction="270"
                      Color="Black"
                      Opacity="0.4"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="20 10 10 24">
                        <TextBlock Text="Saku Ramen"
                                   FontFamily="Kaushan Script"
                                   FontSize="42"
                                   Foreground="#42150D"/>
                        <TextBlock Text="In the heart of the city, Hikari Sushi was born from a deep passion for Japanese culinary artistry. The founder, a chef who traveled across Japan, mastered the craft from traditional sushi bars in Tokyo to cozy ramen shops in Kyoto."
                                   TextWrapping="Wrap"
                                   FontFamily="Montserrat Alternates"
                                   Foreground="#F5EFDF"
                                   FontSize="15.6"
                                   Margin="0 0 0 26"/>
                        <Border x:Name="intro3" Height="192"
                                CornerRadius="20">
                            <Border.Background>
                                <ImageBrush ImageSource="/Assets/Images/intro3.jpg" 
                                            Stretch="UniformToFill"/>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10"
                                                  ShadowDepth="1"
                                                  Direction="270"
                                                  Color="Black"
                                                  Opacity="0.4" />
                            </Border.Effect>
                        </Border>
                    </StackPanel>
                    <Border Grid.Column="1"
                            CornerRadius="20"
                            Margin="10 24 20 24">
                        <Border.Background>
                            <ImageBrush ImageSource="/Assets/Images/intro4.jpg"
                                        Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
