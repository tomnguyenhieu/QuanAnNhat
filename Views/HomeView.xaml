<UserControl
    x:Class="QuanAnNhat.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanAnNhat.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:QuanAnNhat.ViewModels"
    d:DesignHeight="900"
    d:DesignWidth="1300"
    mc:Ignorable="d">
    <Grid Margin="40,20,40,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="310" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border Margin="18" CornerRadius="20">
                <Border.Background>
                    <ImageBrush ImageSource="/Assets/Images/intro1.jpg" Stretch="UniformToFill" />
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="270"
                        Opacity="0.4"
                        ShadowDepth="1"
                        Color="Black" />
                </Border.Effect>
            </Border>
            <Border
                Grid.Column="1"
                Margin="18"
                Background="#BC4C33"
                CornerRadius="20">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="270"
                        Opacity="0.4"
                        ShadowDepth="1"
                        Color="Black" />
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border Margin="14" CornerRadius="20">
                        <Border.Background>
                            <ImageBrush ImageSource="/Assets/Images/intro2.jpg" Stretch="UniformToFill" />
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="10"
                                Direction="270"
                                Opacity="0.4"
                                ShadowDepth="1"
                                Color="Black" />
                        </Border.Effect>
                    </Border>
                    <StackPanel Grid.Column="1" Margin="12">
                        <TextBlock
                            Margin="0,0,0,15"
                            FontFamily="Montserrat Alternates"
                            FontSize="13"
                            Foreground="#FDF6EF"
                            Text="The old photo of the restaurant is a glimpse into the past, capturing a time when it was still modest and unrefined."
                            TextWrapping="Wrap" />
                        <TextBlock
                            Margin="0,0,0,15"
                            FontFamily="Montserrat Alternates"
                            FontSize="13"
                            Foreground="#FDF6EF"
                            Text="Though not perfect, every corner in the picture holds the essence of hard work and dreams."
                            TextWrapping="Wrap" />
                        <TextBlock
                            FontFamily="Montserrat Alternates"
                            FontSize="13"
                            Foreground="#FDF6EF"
                            Text="Now, after years of dedication and investment, the restaurant has transformed—more elegant, more refined. This photo stands as a testament to growth, a reminder of humble beginnings, and a motivation to keep striving for excellence.."
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="680" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Margin="18,0,18,0">
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="GRLabel" Height="40" />
                    <RowDefinition />
                    <RowDefinition Height="{Binding Height, ElementName=GRLabel}" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    x:Name="TBName"
                    Content="Must Try"
                    Style="{StaticResource LabelTheme}" />
                <ScrollViewer
                    Grid.Row="1"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding MustTryDishes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Width="225"
                                    Margin="0,0,30,6"
                                    Background="#BC4C33"
                                    CornerRadius="20">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="10"
                                            Direction="270"
                                            Opacity="0.4"
                                            ShadowDepth="1"
                                            Color="Black" />
                                    </Border.Effect>
                                    <StackPanel Margin="10">
                                        <Border Height="120" CornerRadius="20">
                                            <Border.Background>
                                                <ImageBrush ImageSource="/Assets/Images/dish1.jpg" Stretch="UniformToFill" />
                                            </Border.Background>
                                            <Border.Effect>
                                                <DropShadowEffect
                                                    BlurRadius="10"
                                                    Direction="270"
                                                    Opacity="0.4"
                                                    ShadowDepth="1"
                                                    Color="Black" />
                                            </Border.Effect>
                                        </Border>
                                        <StackPanel Margin="12,8,12,0">
                                            <TextBlock
                                                FontFamily="Montserrat Alternates"
                                                FontSize="20"
                                                FontWeight="SemiBold"
                                                Foreground="#F5EFDF"
                                                Text="{Binding Name}" />
                                            <TextBlock
                                                FontFamily="Montserrat Alternates"
                                                FontSize="11"
                                                Foreground="#F5EFDF"
                                                Text="{Binding Description}" />
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontFamily="Montserrat Alternates"
                                                FontSize="34"
                                                FontWeight="SemiBold"
                                                Foreground="#42150D"
                                                Text="{Binding Price}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
                <Label
                    Grid.Row="2"
                    Content="Best Seller"
                    Style="{StaticResource LabelTheme}" />
                <ScrollViewer
                    Grid.Row="3"
                    Margin="0,0,0,6"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding BestSellerDishes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Width="225"
                                    Margin="0,0,30,6"
                                    Background="#BC4C33"
                                    CornerRadius="20">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="10"
                                            Direction="270"
                                            Opacity="0.4"
                                            ShadowDepth="1"
                                            Color="Black" />
                                    </Border.Effect>
                                    <StackPanel Margin="10">
                                        <Border Height="115" CornerRadius="20">
                                            <Border.Background>
                                                <ImageBrush ImageSource="/Assets/Images/dish1.jpg" Stretch="UniformToFill" />
                                            </Border.Background>
                                            <Border.Effect>
                                                <DropShadowEffect
                                                    BlurRadius="10"
                                                    Direction="270"
                                                    Opacity="0.4"
                                                    ShadowDepth="1"
                                                    Color="Black" />
                                            </Border.Effect>
                                        </Border>
                                        <StackPanel Margin="12,8,12,0">
                                            <TextBlock
                                                FontFamily="Montserrat Alternates"
                                                FontSize="20"
                                                FontWeight="SemiBold"
                                                Foreground="#F5EFDF"
                                                Text="{Binding Name}" />
                                            <TextBlock
                                                FontFamily="Montserrat Alternates"
                                                FontSize="11"
                                                Foreground="#F5EFDF"
                                                Text="{Binding Description}" />
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontFamily="Montserrat Alternates"
                                                FontSize="34"
                                                FontWeight="SemiBold"
                                                Foreground="#42150D"
                                                Text="{Binding Price}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
            <Border
                Grid.Column="1"
                Margin="18,42,18,25"
                Background="#B03A25"
                CornerRadius="20">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="270"
                        Opacity="0.4"
                        ShadowDepth="1"
                        Color="Black" />
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="20,10,10,24">
                        <TextBlock
                            FontFamily="Kaushan Script"
                            FontSize="42"
                            Foreground="#42150D"
                            Text="Saku Ramen" />
                        <TextBlock
                            Margin="0,0,0,26"
                            FontFamily="Montserrat Alternates"
                            FontSize="15.6"
                            Foreground="#F5EFDF"
                            Text="In the heart of the city, Hikari Sushi was born from a deep passion for Japanese culinary artistry. The founder, a chef who traveled across Japan, mastered the craft from traditional sushi bars in Tokyo to cozy ramen shops in Kyoto."
                            TextWrapping="Wrap" />
                        <Border
                            x:Name="intro3"
                            Height="192"
                            CornerRadius="20">
                            <Border.Background>
                                <ImageBrush ImageSource="/Assets/Images/intro3.jpg" Stretch="UniformToFill" />
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="10"
                                    Direction="270"
                                    Opacity="0.4"
                                    ShadowDepth="1"
                                    Color="Black" />
                            </Border.Effect>
                        </Border>
                    </StackPanel>
                    <Border
                        Grid.Column="1"
                        Margin="10,24,20,24"
                        CornerRadius="20">
                        <Border.Background>
                            <ImageBrush ImageSource="/Assets/Images/intro4.jpg" Stretch="UniformToFill" />
                        </Border.Background>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
