<Window
    x:Class="QuanAnNhat.Views.AuthWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanAnNhat.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1600"
    Height="900"
    AllowsTransparency="True"
    Background="White"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid Background="#3A3935">
        <Image
            Margin="-98,0,664,0"
            Source="/Assets/Images/artboard1.png"
            Stretch="Fill" />
        <Image
            Margin="626,172,744,504"
            Source="/Assets/Images/artboard2.png"
            Stretch="Fill" />
        <Image
            Margin="-16,-47,622,-47"
            Source="/Assets/Images/artboard4.png"
            Stretch="Fill" />
        <Grid
            x:Name="RegisterForm"
            Margin="941,0,0,0"
            Background="#3A3935">
            <Grid.RowDefinitions>
                <RowDefinition Height="230" />
                <RowDefinition Height="400" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Content="AUTHENTICATE"
                FontFamily="Montserrat Alternates SemiBold"
                FontSize="75"
                Foreground="#CB6E59" />
            <StackPanel
                Grid.Row="1"
                Margin="40,0,40,0"
                VerticalAlignment="Center">
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label
                        Margin="20,0,20,0"
                        Content="Email"
                        FontFamily="Montserrat Alternates Medium"
                        FontSize="40"
                        Foreground="#FFEAEA" />
                    <TextBox
                        x:Name="Email"
                        Grid.Row="1"
                        Style="{StaticResource TextboxTheme}"
                        Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label
                        Margin="20,0,20,0"
                        Content="Enter code"
                        FontFamily="Montserrat Alternates Medium"
                        FontSize="40"
                        Foreground="#FFEAEA" />
                    <TextBox
                        x:Name="Code"
                        Grid.Row="1"
                        Style="{StaticResource TextboxTheme}"
                        Text="{Binding AuthCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Border
                        Grid.Row="1"
                        Width="66"
                        Height="66"
                        Margin="0,0,40,0"
                        HorizontalAlignment="Right"
                        Background="#CB6E59"
                        CornerRadius="15"
                        Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="10"
                                Direction="270"
                                Opacity="0.4"
                                ShadowDepth="1"
                                Color="Black" />
                        </Border.Effect>
                        <Border.Style>
                            <Style>
                                <Style.Triggers>
                                    <Trigger Property="Border.IsMouseOver" Value="True">
                                        <Setter Property="Border.Opacity" Value="0.8" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.InputBindings>
                            <MouseBinding Command="{Binding ExecuteSendCodeCommand}" MouseAction="LeftClick" />
                        </Border.InputBindings>
                        <Grid>
                            <Label
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="&#xf029;"
                                FontFamily="Font Awesome 6 Free Solid"
                                FontSize="36"
                                Foreground="#FFEAEA"
                                Visibility="Visible" />
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>
            <Border
                Grid.Row="2"
                Height="100"
                Margin="60,0,60,0"
                VerticalAlignment="Top"
                Background="#CB6E59"
                CornerRadius="20"
                Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="270"
                        Opacity="0.4"
                        ShadowDepth="1"
                        Color="Black" />
                </Border.Effect>
                <Border.Style>
                    <Style>
                        <Style.Triggers>
                            <Trigger Property="Border.IsMouseOver" Value="True">
                                <Setter Property="Border.Opacity" Value="0.8" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.InputBindings>
                    <MouseBinding Command="{Binding ExecuteAuthCommand}" MouseAction="LeftClick" />
                </Border.InputBindings>
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Submit"
                    FontFamily="Montserrat Alternates Medium"
                    FontSize="40"
                    Foreground="#FFEAEA" />
            </Border>
        </Grid>
    </Grid>
</Window>
