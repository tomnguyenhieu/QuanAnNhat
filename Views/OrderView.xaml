<UserControl
    x:Class="QuanAnNhat.Views.OrderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:QuanAnNhat.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:QuanAnNhat.ViewModels"
    d:DesignHeight="900"
    d:DesignWidth="1300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <viewmodels:OrderViewModel x:Key="OrderVM" />
    </UserControl.Resources>
    <Grid x:Name="MainGrid" DataContext="{StaticResource OrderVM}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="800" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="124" />
                <RowDefinition Height="140" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid>
                <Border
                    Margin="20,20,20,10"
                    Background="#BC4C33"
                    CornerRadius="20">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="10"
                            Direction="270"
                            Opacity="0.4"
                            ShadowDepth="1"
                            Color="Black" />
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="600" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center"
                            Style="{StaticResource SearchBarTheme}"
                            Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Border x:Name="SearchBtn" Grid.Column="1">
                            <Border.Style>
                                <Style>
                                    <Style.Triggers>
                                        <Trigger Property="Border.IsMouseOver" Value="True">
                                            <Setter Property="Border.Opacity" Value="0.8" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <fa:FontAwesome
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                FontSize="34"
                                Foreground="#F8E8D9"
                                Icon="Search" />
                        </Border>
                        <ToggleButton
                            x:Name="FilterBtn"
                            Grid.Column="2"
                            Background="Transparent"
                            Command="{Binding ExecuteFilterCommand}"
                            CommandParameter="{Binding IsChecked, ElementName=FilterBtn}"
                            Style="{StaticResource ToggleButtonTheme}">
                            <fa:FontAwesome
                                VerticalAlignment="Center"
                                FontSize="34"
                                Foreground="#F8E8D9"
                                Icon="Filter" />
                        </ToggleButton>
                    </Grid>
                </Border>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="GRCategory" Height="50" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Margin="20,0,20,0"
                    Content="Categories"
                    Style="{StaticResource LabelTheme}" />
                <ScrollViewer
                    Grid.Row="1"
                    Margin="20,0,20,0"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="CategoriesItemControl" ItemsSource="{Binding Dishlists}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton
                                    Command="{Binding DataContext.ExcuteGetMenuCommand, ElementName=CategoriesItemControl}"
                                    CommandParameter="{Binding Name}"
                                    Content="{Binding Name}"
                                    GroupName="CategoryRadioButton"
                                    Style="{StaticResource CategoryTheme}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="{Binding Height, ElementName=GRCategory}" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Margin="20,0,20,0"
                    Content="Menu"
                    Style="{StaticResource LabelTheme}" />
                <ScrollViewer Grid.Row="1" Margin="0,0,15,0">
                    <ItemsControl x:Name="MenuItemControl" ItemsSource="{Binding Dishes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Width="225"
                                    Margin="24,0,0,30"
                                    Background="#BC4C33"
                                    CornerRadius="20">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="10"
                                            Direction="270"
                                            Opacity="0.4"
                                            ShadowDepth="1"
                                            Color="Black" />
                                    </Border.Effect>
                                    <Grid>
                                        <StackPanel Margin="10">
                                            <Border Height="115" CornerRadius="20">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding Id, Converter={StaticResource ThumbnailConverter}}" Stretch="UniformToFill" />
                                                </Border.Background>
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        BlurRadius="10"
                                                        Direction="270"
                                                        Opacity="0.4"
                                                        ShadowDepth="1"
                                                        Color="Black" />
                                                </Border.Effect>
                                            </Border>
                                            <StackPanel Margin="12,8,0,0">
                                                <TextBlock
                                                    FontFamily="Montserrat Alternates"
                                                    FontSize="20"
                                                    FontWeight="SemiBold"
                                                    Foreground="#F5EFDF"
                                                    Text="{Binding Name}" />
                                                <TextBlock
                                                    FontFamily="Montserrat Alternates"
                                                    FontSize="11"
                                                    Foreground="#F5EFDF"
                                                    Text="{Binding Description}" />
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="50" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        FontFamily="Montserrat Alternates"
                                                        FontSize="34"
                                                        FontWeight="SemiBold"
                                                        Foreground="#42150D"
                                                        Text="{Binding Price}" />
                                                    <Border Grid.Column="1">
                                                        <Border.Style>
                                                            <Style>
                                                                <Style.Triggers>
                                                                    <Trigger Property="Border.IsMouseOver" Value="True">
                                                                        <Setter Property="Border.Opacity" Value="0.8" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Border.InputBindings>
                                                            <MouseBinding
                                                                Command="{Binding DataContext.ExcuteAddToCartCommand, ElementName=MenuItemControl}"
                                                                CommandParameter="{Binding Id}"
                                                                MouseAction="LeftClick" />
                                                        </Border.InputBindings>
                                                        <fa:FontAwesome
                                                            Cursor="Hand"
                                                            FontSize="40"
                                                            Foreground="White"
                                                            Icon="PlusCircle" />
                                                    </Border>
                                                </Grid>
                                            </StackPanel>
                                        </StackPanel>
                                        <ToggleButton
                                            Command="{Binding DataContext.ExecuteAddToWishlistCommand, ElementName=MainGrid}"
                                            CommandParameter="{Binding Id}"
                                            Style="{StaticResource WishlistTheme}">
                                            <ToggleButton.FontFamily>
                                                <MultiBinding Converter="{StaticResource WishlistIconConverter}">
                                                    <Binding Path="Id" />
                                                    <Binding ElementName="MainGrid" Path="DataContext._UserId" />
                                                    <Binding Path="Wishlists" />
                                                </MultiBinding>
                                            </ToggleButton.FontFamily>
                                        </ToggleButton>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Background="#FFEDDB">
            <Grid.RowDefinitions>
                <RowDefinition Height="220" />
                <RowDefinition Height="380" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Margin="20,5,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="GRCustomerInfo" Height="60" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Customer information" Style="{StaticResource LabelTheme}" />
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border
                        Margin="0,6,0,6"
                        Background="#F5D5C2"
                        CornerRadius="13">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="10"
                                Direction="270"
                                Opacity="0.4"
                                ShadowDepth="1"
                                Color="Black" />
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label
                                Margin="10,0,0,0"
                                VerticalContentAlignment="Center"
                                Content="Name:"
                                FontFamily="Montserrat Alternates"
                                FontSize="24"
                                Foreground="#42150D" />
                            <Label
                                Grid.Column="1"
                                VerticalContentAlignment="Center"
                                Content="Nguyen Thi Duong Dua"
                                FontFamily="Montserrat Alternates"
                                FontSize="24"
                                Foreground="#42150D" />
                        </Grid>
                    </Border>
                    <ComboBox
                        Grid.Row="1"
                        Margin="0,6,0,6"
                        ItemsSource="{Binding Tables}"
                        SelectedItem="{Binding SelectedTable, Mode=TwoWay}"
                        Style="{StaticResource ComboBoxFlatStyle}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock FontSize="20" Text="{Binding Id}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Margin="20,20,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Cart/order details" Style="{StaticResource LabelTheme}" />
                <ScrollViewer Grid.Row="1">
                    <ItemsControl x:Name="CartItemControl" ItemsSource="{Binding Cart}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Height="110"
                                    Margin="0,0,0,10"
                                    Background="#B03A25"
                                    CornerRadius="20">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="124" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Border Margin="16" CornerRadius="14">
                                            <Border.Background>
                                                <ImageBrush ImageSource="/Assets/Images/dish1.jpg" Stretch="UniformToFill" />
                                            </Border.Background>
                                        </Border>
                                        <Grid Grid.Column="1" Margin="10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontFamily="Montserrat Alternates SemiBold"
                                                FontSize="24"
                                                Foreground="#FFEDDB"
                                                Text="{Binding Name}" />
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <Border
                                                        Background="#F5D5C2"
                                                        BorderThickness="0"
                                                        CornerRadius="15 0 0 15"
                                                        Cursor="Hand">
                                                        <Border.Style>
                                                            <Style>
                                                                <Style.Triggers>
                                                                    <Trigger Property="UIElement.IsMouseOver" Value="True">
                                                                        <Setter Property="UIElement.Opacity" Value="0.8" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Border.InputBindings>
                                                            <MouseBinding
                                                                Command="{Binding DataContext.ExcuteMinusCommand, ElementName=CartItemControl}"
                                                                CommandParameter="{Binding Name}"
                                                                MouseAction="LeftClick" />
                                                        </Border.InputBindings>
                                                        <fa:FontAwesome
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Foreground="#42150D"
                                                            Icon="Minus" />
                                                    </Border>
                                                    <Border
                                                        Grid.Column="1"
                                                        Background="#F5D5C2"
                                                        BorderThickness="0">
                                                        <Label
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Content="{Binding Quantity}"
                                                            FontFamily="Montserrat Alternates SemiBold"
                                                            FontSize="24"
                                                            Foreground="#42150D" />
                                                    </Border>
                                                    <Border
                                                        Grid.Column="2"
                                                        Background="#F5D5C2"
                                                        BorderThickness="0"
                                                        CornerRadius="0 15 15 0"
                                                        Cursor="Hand">
                                                        <Border.Style>
                                                            <Style>
                                                                <Style.Triggers>
                                                                    <Trigger Property="UIElement.IsMouseOver" Value="True">
                                                                        <Setter Property="UIElement.Opacity" Value="0.8" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Border.InputBindings>
                                                            <MouseBinding
                                                                Command="{Binding DataContext.ExcutePlusCommand, ElementName=CartItemControl}"
                                                                CommandParameter="{Binding Name}"
                                                                MouseAction="LeftClick" />
                                                        </Border.InputBindings>
                                                        <fa:FontAwesome
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Foreground="#42150D"
                                                            Icon="Plus" />
                                                    </Border>
                                                </Grid>
                                                <TextBlock
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Right"
                                                    FontFamily="Montserrat Alternates SemiBold"
                                                    FontSize="30"
                                                    Foreground="#FFEDDB"
                                                    Text="{Binding Price}" />
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Row="2" Margin="20,10,20,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Notes" Style="{StaticResource LabelTheme}" />
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="160" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border
                        Margin="0,0,0,20"
                        Background="#F5D5C2"
                        CornerRadius="13">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="10"
                                Direction="270"
                                Opacity="0.4"
                                ShadowDepth="1"
                                Color="Black" />
                        </Border.Effect>
                        <TextBox
                            Margin="18"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Pen"
                            FontFamily="Montserrat Alternates"
                            FontSize="24"
                            Foreground="#42150D"
                            Text="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap" />
                    </Border>
                    <Border
                        Grid.Row="1"
                        Background="#B03A25"
                        CornerRadius="13"
                        Cursor="Hand">
                        <Border.Style>
                            <Style>
                                <Style.Triggers>
                                    <Trigger Property="Border.IsMouseOver" Value="True">
                                        <Setter Property="Border.Opacity" Value="0.8" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="10"
                                Direction="270"
                                Opacity="0.4"
                                ShadowDepth="1"
                                Color="Black" />
                        </Border.Effect>
                        <Border.InputBindings>
                            <MouseBinding Command="{Binding ExcutePayCommand}" MouseAction="LeftClick" />
                        </Border.InputBindings>
                        <Label
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="Process to checkout"
                            FontFamily="Montserrat Alternates"
                            FontSize="30"
                            Foreground="#FFEDDB" />
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
