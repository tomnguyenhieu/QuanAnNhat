<UserControl
    x:Class="QuanAnNhat.Views.OrderHistoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanAnNhat.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:QuanAnNhat.ViewModels"
    d:DesignHeight="900"
    d:DesignWidth="1300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <viewmodels:OrderHistoryViewModel x:Key="OrderHistoryVM" />
    </UserControl.Resources>
    <Grid
        Background="White"
        DataContext="{StaticResource OrderHistoryVM}"
        ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="800" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="180" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Status" Style="{StaticResource LabelTheme}" />
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <RadioButton
                        x:Name="OrderedBtn"
                        Command="{Binding ExcuteGetOrderBillsCommand}"
                        CommandParameter="{Binding Content, ElementName=OrderedBtn}"
                        Content="Ordered"
                        Style="{StaticResource StatusButtonTheme}" />
                    <RadioButton
                        x:Name="CancelledBtn"
                        Command="{Binding ExcuteGetOrderBillsCommand}"
                        CommandParameter="{Binding Content, ElementName=CancelledBtn}"
                        Content="Cancelled"
                        Style="{StaticResource StatusButtonTheme}" />
                </StackPanel>
            </Grid>
            <ScrollViewer Grid.Row="1">
                <ItemsControl x:Name="OrderBillsItemsControl" ItemsSource="{Binding OrderBills}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="700"
                                Height="200"
                                Margin="0,0,0,20"
                                Background="#D9D9D9"
                                CornerRadius="12">
                                <Grid Margin="20,0,20,0" ShowGridLines="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="500" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid ShowGridLines="True">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="50" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Label Content="{Binding Time}" FontSize="30" />
                                        <ScrollViewer
                                            Grid.Row="1"
                                            HorizontalScrollBarVisibility="Auto"
                                            VerticalScrollBarVisibility="Disabled">
                                            <ItemsControl ItemsSource="{Binding Orders}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border
                                                            Width="120"
                                                            Height="120"
                                                            Margin="0,0,20,0"
                                                            Background="Red">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition />
                                                                    <RowDefinition Height="30" />
                                                                </Grid.RowDefinitions>
                                                                <Label
                                                                    Grid.Row="1"
                                                                    Background="White"
                                                                    Content="{Binding Dish.Name}"
                                                                    FontSize="16" />
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Grid>
                                    <Grid
                                        Grid.Column="1"
                                        Margin="10,0,0,0"
                                        ShowGridLines="True">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Label Content="Total Price" FontSize="30" />
                                        <Label
                                            Grid.Row="1"
                                            Content="{Binding TotalPrice}"
                                            FontSize="30" />
                                        <Button
                                            Grid.Row="2"
                                            Margin="10"
                                            Background="White"
                                            Command="{Binding DataContext.ExcuteGetBillDetailsCommand, ElementName=OrderBillsItemsControl}"
                                            CommandParameter="{Binding Id}"
                                            Content="Detail &gt;"
                                            FontSize="20" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
