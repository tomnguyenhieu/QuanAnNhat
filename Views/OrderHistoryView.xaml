<UserControl
    x:Class="QuanAnNhat.Views.OrderHistoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:QuanAnNhat.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:QuanAnNhat.ViewModels"
    d:DesignHeight="900"
    d:DesignWidth="1300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <viewmodels:OrderHistoryViewModel x:Key="OrderHistoryVM" />
    </UserControl.Resources>
    <Grid
        Background="White"
        DataContext="{StaticResource OrderHistoryVM}"
        ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="800" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="180" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Status" Style="{StaticResource LabelTheme}" />
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <RadioButton
                        x:Name="OrderedBtn"
                        Command="{Binding ExcuteGetOrderBillsCommand}"
                        CommandParameter="{Binding Content, ElementName=OrderedBtn}"
                        Content="Ordered"
                        Style="{StaticResource StatusButtonTheme}" />
                    <RadioButton
                        x:Name="CancelledBtn"
                        Command="{Binding ExcuteGetOrderBillsCommand}"
                        CommandParameter="{Binding Content, ElementName=CancelledBtn}"
                        Content="Cancelled"
                        Style="{StaticResource StatusButtonTheme}" />
                </StackPanel>
            </Grid>
            <ScrollViewer Grid.Row="1">
                <ItemsControl x:Name="OrderBillsItemsControl" ItemsSource="{Binding OrderBills}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="700"
                                Height="200"
                                Margin="0,0,0,20"
                                Background="#D9D9D9"
                                CornerRadius="12">
                                <Grid Margin="20,0,20,0" ShowGridLines="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="500" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid ShowGridLines="True">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="50" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Label Content="{Binding Time}" FontSize="30" />
                                        <ScrollViewer
                                            Grid.Row="1"
                                            HorizontalScrollBarVisibility="Auto"
                                            VerticalScrollBarVisibility="Disabled">
                                            <ItemsControl ItemsSource="{Binding Orders}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border
                                                            Width="120"
                                                            Height="120"
                                                            Margin="0,0,20,0"
                                                            Background="#B23D23">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition />
                                                                    <RowDefinition Height="30" />
                                                                </Grid.RowDefinitions>
                                                                <Label
                                                                    Grid.Row="1"
                                                                    Background="White"
                                                                    Content="{Binding Dish.Name}"
                                                                    FontSize="16" />
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Grid>
                                    <Grid
                                        Grid.Column="1"
                                        Margin="10,0,0,0"
                                        ShowGridLines="True">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Label Content="Total Price" FontSize="30" />
                                        <Label
                                            Grid.Row="1"
                                            Content="{Binding TotalPrice}"
                                            FontSize="30" />
                                        <Button
                                            Grid.Row="2"
                                            Margin="10"
                                            Background="White"
                                            Command="{Binding DataContext.ExcuteGetBillDetailsCommand, ElementName=OrderBillsItemsControl}"
                                            CommandParameter="{Binding Id}"
                                            Content="Detail &gt;"
                                            Cursor="Hand"
                                            FontSize="20" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        <Grid
            Grid.Column="1"
            Background="#D9D9D9"
            ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="110" />
                <RowDefinition Height="110" />
                <RowDefinition Height="350" />
                <RowDefinition Height="210" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border
                Margin="14"
                Background="White"
                CornerRadius="20">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <fa:FontAwesome
                        FontSize="40"
                        Foreground="{Binding OrderingIcon}"
                        Icon="ListAlt" />
                    <Label
                        Grid.Column="1"
                        Content="---------&gt;"
                        FontSize="20"
                        Foreground="{Binding Arrow1}" />
                    <fa:FontAwesome
                        Grid.Column="2"
                        FontSize="35"
                        Foreground="{Binding ServedIcon}"
                        Icon="Heart" />
                    <Label
                        Grid.Column="3"
                        Content="---------&gt;"
                        FontSize="20"
                        Foreground="{Binding Arrow2}" />
                    <fa:FontAwesome
                        Grid.Column="4"
                        FontSize="40"
                        Foreground="{Binding DoneIcon}"
                        Icon="CheckCircle" />
                </Grid>
            </Border>
            <Border
                Grid.Row="1"
                Margin="14"
                CornerRadius="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border
                        Margin="0,0,5,0"
                        Background="#B23D23"
                        CornerRadius="10">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Label
                                Content="Mã hóa đơn:"
                                FontSize="24"
                                Foreground="#FFEFEC" />
                            <Label
                                Content="{Binding OrderBillId}"
                                FontSize="24"
                                Foreground="#FFEFEC" />
                        </StackPanel>
                    </Border>
                    <Border
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Background="#B23D23"
                        CornerRadius="10">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Label
                                Content="Số bàn:"
                                FontSize="24"
                                Foreground="#FFEFEC" />
                            <Label
                                Content="{Binding OrderTableId}"
                                FontSize="24"
                                Foreground="#FFEFEC" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            <ScrollViewer Grid.Row="2">
                <ItemsControl ItemsSource="{Binding Orders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Height="90" Margin="10,10,0,10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="45" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Label Content="{Binding Dish.Name}" FontSize="30" />
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal">
                                            <Label
                                                Width="100"
                                                Content="{Binding Dish.Price}"
                                                FontSize="24" />
                                            <Label Content="x" FontSize="24" />
                                            <Label Content="{Binding Quantity}" FontSize="24" />
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal">
                                            <Label Content="$" FontSize="24" />
                                            <Label Content="{Binding TotalPrice}" FontSize="24" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
            <Grid Grid.Row="3" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Subtotal" Style="{StaticResource LabelTheme}" />
                <Label
                    Grid.Row="1"
                    VerticalContentAlignment="Center"
                    Content="Discount"
                    FontSize="20"
                    Foreground="#9B9898" />
                <Label
                    Grid.Row="2"
                    Content="Total"
                    Style="{StaticResource LabelTheme}" />
                <Label
                    Grid.Row="3"
                    Content="Payment methods"
                    Style="{StaticResource LabelTheme}" />
                <Label
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Content="{Binding OrderBillSubtotal}"
                    FontSize="30" />
                <Label
                    Grid.Row="1"
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Content="{Binding DiscountVouncher.DiscountPrice}"
                    FontSize="20"
                    Foreground="#9B9898" />
                <Label
                    Grid.Row="2"
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    Content="{Binding OrderBillTotal}"
                    FontSize="30" />
                <Label
                    Grid.Row="3"
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    Content="Cash"
                    Style="{StaticResource LabelTheme}" />
            </Grid>
            <Border
                Grid.Row="4"
                Margin="16"
                Background="#B23D23"
                CornerRadius="20"
                Cursor="Hand">
                <Border.InputBindings>
                    <MouseBinding Command="{Binding ExcuteCancelOrderCommand}" MouseAction="LeftClick" />
                </Border.InputBindings>
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Cancel"
                    FontSize="34"
                    Foreground="{Binding CancelButtonColor}" />
            </Border>
        </Grid>
    </Grid>
</UserControl>
