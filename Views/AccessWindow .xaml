<Window
    x:Class="QuanAnNhat.Views.AccessWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanAnNhat.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1600"
    Height="900"
    AllowsTransparency="True"
    Background="White"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <TextBox
            x:Name="LoginTextBox"
            Width="1030"
            Height="186"
            Margin="0,172,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="100"
            Text="{Binding UserId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            Width="834"
            Height="224"
            Margin="0,450,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Command="{Binding ExecuteClickCommand}"
            CommandParameter="{Binding Text, ElementName=LoginTextBox}"
            Content="Button"
            FontSize="100" />
    </Grid>
</Window>
