<UserControl
    x:Class="QuanAnNhat.Views.LiveDataView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanAnNhat.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:QuanAnNhat.ViewModels"
    d:DesignHeight="900"
    d:DesignWidth="1300"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Margin="20"
                Content="Còn món"
                Style="{StaticResource LabelTheme}" />
            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding AvailableDishes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="450"
                                Height="100"
                                Margin="20"
                                Background="#D9D9D9"
                                CornerRadius="20">
                                <Grid Margin="30">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="{Binding Name}" Style="{StaticResource LabelTheme}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        FontSize="50"
                                        Text="{Binding Status}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Margin="20"
                Content="Hết món"
                Style="{StaticResource LabelTheme}" />
            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding UnAvailableDishes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="450"
                                Height="100"
                                Margin="20"
                                Background="#D9D9D9"
                                CornerRadius="20">
                                <Grid Margin="30">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="{Binding Name}" Style="{StaticResource LabelTheme}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        FontSize="50"
                                        Text="{Binding Status}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        <Button
            Grid.Row="1"
            Margin="14"
            Command="{Binding ExcuteSendNotificationCommand}"
            Content="Send Notification"
            FontSize="40" />
        <Grid Grid.Row="1" Grid.Column="1">
            <Button
                Margin="14"
                Command="{Binding ExcuteCheckCommand}"
                Content="Check"
                FontSize="40" />
        </Grid>
    </Grid>
</UserControl>
