<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:QuanAnNhat.Converter">
    <converter:FormPlaceholderConverter x:Key="FormPlaceholderConverter" />
    <Style x:Key="TextboxTheme" TargetType="{x:Type TextBox}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border
                            Height="100"
                            Margin="20,0,20,0"
                            Background="#F8E8D9"
                            CornerRadius="20">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="10"
                                    Direction="270"
                                    Opacity="0.4"
                                    ShadowDepth="1"
                                    Color="Black" />
                            </Border.Effect>
                            <Grid Margin="15,0,0,0">
                                <TextBox
                                    x:Name="TextBox"
                                    Text="{TemplateBinding Name}"
                                    Visibility="Hidden" />
                                <Rectangle StrokeThickness="1" />
                                <TextBox
                                    x:Name="SearchBox"
                                    Margin="1"
                                    Padding="5"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontFamily="Montserrat Alternates"
                                    FontSize="24"
                                    Foreground="#42150D"
                                    Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontFamily="Montserrat Alternates Light"
                                    FontSize="{Binding FontSize, ElementName=SearchBox}"
                                    Foreground="#42150D"
                                    IsHitTestVisible="False"
                                    Opacity="0.5"
                                    Text="{Binding Text, ElementName=TextBox, Converter={StaticResource FormPlaceholderConverter}}">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                            <Setter Property="Visibility" Value="Hidden" />
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>