<UserControl
    x:Class="QuanAnNhat.Components.BindablePasswordBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanAnNhat.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Height="100"
        Margin="20,0,20,0"
        Background="#F8E8D9"
        CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="10"
                Direction="270"
                Opacity="0.4"
                ShadowDepth="1"
                Color="Black" />
        </Border.Effect>
        <PasswordBox
            x:Name="passwordBox"
            Margin="22,0,0,0"
            VerticalAlignment="Center"
            Background="Transparent"
            BorderThickness="0"
            FontSize="24"
            PasswordChanged="PasswordBox_PasswordChanged" />
    </Border>
</UserControl>
